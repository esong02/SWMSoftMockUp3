<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="SWMSoftMockUp3.Views.LocationMapPage" >
	<ContentPage.Content>
        <StackLayout
            Orientation = "Vertical"
            BackgroundColor = "Blue">

            <Label
                Text = "Location Map"
                TextColor = "White"
                HorizontalTextAlignment = "Start"
                Margin = "10,5,10,5"
                FontAttributes = "Bold"
                FontSize = "18" />
            
            <Image 
                Source = "map_image1.png"
                HorizontalOptions = "FillAndExpand"
                Aspect = "AspectFit"                
                Margin = "10,10,10,10" />

             <Label
                x:Name="LocationText"
                Text = "Address:"
                TextColor = "White"
                LineBreakMode = "WordWrap"
                HorizontalTextAlignment = "Start"
                Margin = "10,5,10,5"
                FontSize = "16" />

            <Label
                Margin="10,5,10,5"
                HorizontalOptions="Start"
                FontSize="Medium"
                TextColor="White"
                Text="Directions: The location address and step by step navigation to the location would appear here via Google Maps"
                LineBreakMode="WordWrap" />


        </StackLayout>
	</ContentPage.Content>
</ContentPage>
